
<%- include ("partials/header") %>

<body>
    <%- include ("partials/navbar") %>
    <main> <!--Início do conteúdo principal da página-->
        <section> <!--Início da primeira seção-->
            <div class="container"> <!--Início do container-->
                <div class="card" id="formulario-pergunta"> <!--Início do card-->
                    <div class="card-header"> <!--Início do card-header-->
                        <h3>Realizar pergunta</h3>
                    </div> <!--Fim do card-header-->
                    <div class="card-body"> <!--Início do card-body-->
                        <form method="POST" action="/salvarpergunta"> <!--Início do formulário-->
                            <label for="tituloForm">Título</label>
                            <input type="text" name="titulo" id="tituloForm" placeholder="Título" class="form-control">
                            <br>
                            <label for="descricaoForm">Descrição</label>
                            <textarea name="descricao" id="descricaoForm" placeholder="Descreva sua pergunta" class="form-control"></textarea>
                            <br>
                            <button class="btn btn-primary w-100">Perguntar</button>
                        </form> <!--Fim do formulário-->
                    </div> <!--Fim do card-body-->
                </div> <!--Fim do card-->
            </div> <!--Fim do container-->
        </section> <!--Fim da primeira seção-->
    </main> <!--Fim do conteúdo principal da página-->
</body>

<%- include ("partials/footer") %>
